use AppleScript version "2.4" -- Yosemite (10.10) or lateruse scripting additionsactivate application "QuickTime Player"-- 叫醒 QuickTimetell application "System Events"	-- 让系统起来干活	tell process "QuickTime Player"		-- 让系统去监督 QuickTime		set frontmost to true		click menu item "新建屏幕录制" of menu "文件" of menu bar 1		-- 点击「菜单栏 - 文件 - 新建屏幕录制」		repeat until exists window "屏幕录制"			-- 等待「屏幕录制」窗口出现		end repeat		tell application "System Events" to keystroke " "		-- 按一下空格键开始录制	end tellend telldelay 0.5tell application "System Events"	click at {720, 450}end tell